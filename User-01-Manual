	@After             
	  public void Ending() {    
	          try{    
	            driver.close();
	            Thread.sleep(3000);
	             }
	         catch(Exception b){
	            b.getMessage();
	             }
	   }
	  private static String closeAlertAndGetItsText() {
		try {
	      Alert alert = driver.switchTo().alert();
	      String alertText = alert.getText();
	      if (acceptNextAlert) {
	        alert.accept();
	      } else {
	        alert.dismiss();
	      }
	      return alertText;
	    } finally {
	      acceptNextAlert = true;
	    }
	  }	
	
}
